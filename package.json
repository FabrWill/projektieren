{
  "name": "projektieren",
  "displayName": "Projektieren",
  "description": "AI Agent Task Manager - Kanban board for managing tasks with MCP integration for Cursor agents",
  "version": "0.1.0",
  "publisher": "Fabre",
  "icon": "media/icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/FabrWill/projektieren"
  },
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "kanban.openBoard",
        "title": "Open Kanban Board",
        "category": "Kanban"
      },
      {
        "command": "kanban.createTask",
        "title": "Create New Task",
        "category": "Kanban"
      },
      {
        "command": "kanban.runTask",
        "title": "Run Task",
        "category": "Kanban"
      },
      {
        "command": "kanban.stopTask",
        "title": "Stop Task",
        "category": "Kanban"
      },
      {
        "command": "kanban.finishTask",
        "title": "Mark Task as Finished",
        "category": "Kanban"
      },
      {
        "command": "kanban.copyMcpConfig",
        "title": "Copy MCP Config Snippet",
        "category": "Kanban"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "kanban",
          "title": "Projektieren",
          "icon": "media/kanban-icon.svg"
        }
      ]
    },
    "views": {
      "kanban": [
        {
          "type": "webview",
          "id": "kanban.boardView",
          "name": "Board"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "pnpm run build",
    "build": "pnpm run build:extension && pnpm run build:webview && pnpm run build:mcp",
    "build:extension": "esbuild src/extension.ts --bundle --outfile=dist/extension.js --external:vscode --format=cjs --platform=node --sourcemap",
    "build:webview": "cd src/webview && vite build",
    "build:mcp": "esbuild src/mcp/server.ts --bundle --outfile=dist/mcp/index.mjs --format=esm --platform=node --sourcemap",
    "watch": "concurrently \"pnpm run watch:extension\" \"pnpm run watch:webview\"",
    "watch:extension": "esbuild src/extension.ts --bundle --outfile=dist/extension.js --external:vscode --format=cjs --platform=node --sourcemap --watch",
    "watch:webview": "cd src/webview && vite build --watch",
    "dev": "pnpm run watch",
    "package": "vsce package --no-dependencies",
    "test": "vitest run"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.18",
    "@types/uuid": "^9.0.7",
    "@types/vscode": "^1.85.0",
    "@vitejs/plugin-react": "^4.2.1",
    "@vscode/vsce": "^2.22.0",
    "concurrently": "^8.2.2",
    "esbuild": "^0.19.10",
    "typescript": "^5.3.3",
    "vite": "^5.0.10",
    "vitest": "^1.1.0"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "uuid": "^9.0.1"
  }
}

